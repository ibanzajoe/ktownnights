<div class="container" style="margin-top: 50px;">
  <div style="text-align: center;" class=""><img width="200" class="image" src="/site/img/heart-128.png"></div>
  <div class="col-md-offset-2 col-md-8">

    <br><br>  
    <p class="lead" style="text-align: center;">Sign up and browse</p>
    <br>

    <form role="form" method="POST" class="form-horizontal" action="/user/register">

      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4">
          <input type="text" name="first_name" id="first_name" class="form-control" placeholder="first name" value="<%= params[:first_name]%>">
        </div>
        <div class="col-sm-4">
          <input type="text" name="last_name" id="last_name" class="form-control" placeholder="last name" value="<%= params[:last_name]%>">
        </div>
      </div>

      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-8">
          <input type="text" name="email" id="email" class="form-control" placeholder="joe@doe.com" value="<%= params[:email]%>">
        </div>
      </div>

      <div class="form-group">
        <label for="password" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-8">
          <input type="password" name="password" id="password" class="form-control" placeholder="atleast 6 characters" value="<%= params[:password]%>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <button type="submit" class="btn btn-primary"><i class="fa fa-lock"></i> Signup</button>
        </div>
      </div>

      <p class="lead" style="text-align: center; margin-top: 120px;">Join us, you never know who you might meet!</p>

    </form>

  </div>
</div>
